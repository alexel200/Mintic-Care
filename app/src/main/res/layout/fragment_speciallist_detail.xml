<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SpeciallistDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/specialist_fragment_image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/padding_fields"
        tools:src="@drawable/avatar"
        android:scaleType="fitXY"
        />
        <com.google.android.material.textview.MaterialTextView
          android:id="@+id/specialist_fragment_detail_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@id/specialist_fragment_image"
          android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
          android:fontFamily="@font/roboto_bold"
          android:textColor="@color/primary"
          tools:text="Doctor. Smith Anderson" />

      <com.google.android.material.textview.MaterialTextView
        android:id="@+id/specialist_fragment_detail_speciallity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/specialist_fragment_detail_name"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:textColor="@color/primary"
        tools:text="Medicina General" />

      <RatingBar
        android:id="@+id/specialist_fragment_detail_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/specialist_fragment_detail_speciallity"
        android:isIndicator="true"
        android:numStars="5"
        tools:rating="4"
        style="@style/Widget.AppCompat.RatingBar.Small"
        />

      <com.google.android.material.textview.MaterialTextView
        android:id="@+id/specialist_fragment_description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/specialist_fragment_detail_rating"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginStart="@dimen/padding_fields"
        android:text="Acerca de" />

      <com.google.android.material.textview.MaterialTextView
        android:id="@+id/specialist_fragment_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/specialist_fragment_description_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_marginStart="@dimen/padding_fields"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
        android:layout_marginHorizontal="@dimen/padding_fields"/>


      <com.google.android.material.card.MaterialCardView
        android:id="@+id/specialist_fragment_card_patients"
        android:layout_marginVertical="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/specialist_fragment_description"
        app:layout_constraintEnd_toStartOf="@+id/specialist_fragment_card_grade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="8dp">

          <com.google.android.material.textview.MaterialTextView
            android:id="@+id/doctor_detail_fragment_card_patients_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/primary"
            tools:text="15K+"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            />
          <com.google.android.material.textview.MaterialTextView
            android:id="@+id/doctor_detail_fragment_card_patients_label"
            app:layout_constraintTop_toBottomOf="@id/doctor_detail_fragment_card_patients_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_bold"
            android:text="Pacientes"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
      </com.google.android.material.card.MaterialCardView>
      <com.google.android.material.card.MaterialCardView
        android:id="@+id/specialist_fragment_card_grade"
        android:layout_marginVertical="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/specialist_fragment_description"
        app:layout_constraintStart_toEndOf="@id/specialist_fragment_card_patients"
        app:layout_constraintEnd_toStartOf="@+id/specialist_fragment_card_exp"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="8dp">

          <com.google.android.material.textview.MaterialTextView
            android:id="@+id/doctor_detail_fragment_card_grade_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/primary"
            tools:text="4,5"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            />
          <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="1"
            android:isIndicator="true"
            app:layout_constraintStart_toEndOf="@id/doctor_detail_fragment_card_grade_name"
            app:layout_constraintTop_toTopOf="@id/doctor_detail_fragment_card_grade_name"
            app:layout_constraintBottom_toBottomOf="@id/doctor_detail_fragment_card_grade_name"
            tools:rating="1"
            style="@style/Widget.AppCompat.RatingBar.Small"
            />
          <com.google.android.material.textview.MaterialTextView
            android:id="@+id/doctor_detail_fragment_card_grade_label"
            app:layout_constraintTop_toBottomOf="@id/doctor_detail_fragment_card_grade_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_bold"
            android:text="CalificaciÃ³n"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
      </com.google.android.material.card.MaterialCardView>

      <com.google.android.material.card.MaterialCardView
        android:id="@+id/specialist_fragment_card_exp"
        android:layout_marginVertical="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/specialist_fragment_description"
        app:layout_constraintStart_toEndOf="@+id/specialist_fragment_card_grade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="8dp">

          <com.google.android.material.textview.MaterialTextView
            android:id="@+id/doctor_detail_fragment_card_exp_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/primary"
            tools:text="8yrs+"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            />
          <com.google.android.material.textview.MaterialTextView
            android:id="@+id/doctor_detail_fragment_card_exp_label"
            app:layout_constraintTop_toBottomOf="@id/doctor_detail_fragment_card_exp_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/roboto_bold"
            android:text="Experiencia"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
      </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>

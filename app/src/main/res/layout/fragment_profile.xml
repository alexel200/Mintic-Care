<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ProfileFragment">

    <com.google.android.material.imageview.ShapeableImageView
      android:id="@+id/profile_fragment_image"
      android:layout_width="128dp"
      android:layout_height="128dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="@dimen/padding_fields"
      app:shapeAppearanceOverlay="@style/circleImageView"
      tools:srcCompat="@drawable/avatar"
      android:scaleType="fitXY"
      app:strokeWidth="2dp"
      />

      <com.google.android.material.textview.MaterialTextView
        android:id="@+id/profile_fragment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_fragment_image"
        tools:text="Dr. Jhon Rueda"
        android:layout_marginTop="@dimen/defaultMargin"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/primary"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/profile_fragment_email"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/profile_fragment_name"
    tools:text="alexel200@gmail.com"
    android:layout_marginTop="@dimen/defaultMargin"
    android:fontFamily="@font/roboto_bold"
    android:textColor="@color/primary"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/profile_fragment_gender"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/profile_fragment_email"
    tools:text="Masculino"
    android:layout_marginTop="@dimen/defaultMargin"
    android:fontFamily="@font/roboto_bold"
    android:textColor="@color/primary"
    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>

  <com.google.android.material.button.MaterialButton
    android:id="@+id/profile_fragment_logout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginHorizontal="60dp"
    android:text="@string/logout"
    />

</androidx.constraintlayout.widget.ConstraintLayout>

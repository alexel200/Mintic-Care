<resources>
    <!-- Base application theme. -->
    <style name="Theme.MinticCare" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputEditText</item>

        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="hintTextAppearance">@style/editTextHint</item>

    </style>

    <style name="circleImageView" parent="Theme.MinticCare">
      <item name="cornerFamily">rounded</item>
      <item name="cornerSize">50%</item>
    </style>

    <style name="TabLayoutStyle" parent="Theme.MinticCare">
      <item name="android:textSize">16sp</item>
      <item name="android:textAllCaps">true</item>
      <item name="android:textStyle">bold</item>
      <item name="tabTextColor">@color/black</item>
      <item name="tabSelectedTextColor">@color/primary</item>
    </style>

    <style name="ThemeOverlay.App.TextInputEditText" parent="ThemeOverlay.MaterialComponents.TextInputEditText">
      <item name="editTextStyle">@style/App_EditTextStyle</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
      <item name="colorControlNormal">#CCCCCC</item>
      <item name="colorControlActivated">#CCCCCC</item>
    </style>

    <style name="App_EditTextStyle" parent="">
      <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.TextInputEditText</item>
      <item name="android:background">@drawable/edit_text_bg</item>
      <item name="color">@color/secundary</item>
      <item name="android:textSize">16sp</item>
      <item name="android:paddingTop">  18dp</item>
      <item name="android:paddingBottom">18dp</item>
      <item name="android:paddingLeft">18dp</item>
      <item name="android:layout_marginTop">20dp</item>
      <item name="android:focusable">true</item>
      <item name="android:focusableInTouchMode">true</item>
      <item name="android:layout_margin">@dimen/padding_fields</item>
      <item name="borderWidth">0dp</item>
      <item name="boxStrokeWidth">0dp</item>
      <item name="boxStrokeWidthFocused">0dp</item>
    </style>
  <style name="Theme.MinticCare.NoActionBar" parent="@style/Theme.MinticCare">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  <style name="editTextHint" parent="@style/Theme.MinticCare">
    <item name="color">@color/primary</item>
  </style>

  <style name="cutImageView" parent="">
    <item name="cornerFamily">cut</item>
    <item name="cornerSize">50%</item>
  </style>

  <style name="inputLayoutStyle" parent="">
    <item name="boxStrokeWidth">0dp</item>
    <item name="boxStrokeWidthFocused">0dp</item>
  </style>


  <style name="Theme.SomePlugin.XYZ.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:textColorLink">#000000</item>
  </style>
</resources>

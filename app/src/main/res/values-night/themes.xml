<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MinticCare" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="hintTextAppearance">@style/editTextHint</item>
    </style>

  <style name="App_EditTextStyle" parent="@style/Theme.MinticCare">
    <item name="android:background">@drawable/edit_text_bg</item>
    <item name="color">@color/secundary</item>
    <item name="android:textSize">16sp</item>
    <item name="android:paddingTop">10dp</item>
    <item name="android:paddingBottom">10dp</item>
    <item name="android:paddingLeft">10dp</item>
    <item name="android:layout_marginTop">20dp</item>

  </style>

  <style name="TabLayoutStyle" parent="">
    <item name="android:textSize">16sp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textStyle">bold</item>
    <item name="tabTextColor">@color/black</item>
    <item name="tabSelectedTextColor">@color/primary</item>
  </style>
  <style name="Theme.SomePlugin.XYZ.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:textColorLink">#000000</item>
  </style>

</resources>
